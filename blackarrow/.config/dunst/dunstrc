[global]
    ### Display ###

    monitor = 0
    follow = keyboard

    #   [{width}]x{height}[+/-{x}+/-{y}]
    geometry = "450x5-5+33"

    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 0
    padding = 6
    horizontal_padding = 6
    frame_width = 2
    separator_color = frame
    sort = yes
    idle_threshold = 0

    ### Text ###

    font = DejaVu Sans Mono 11

    line_height = 0
    markup = full
    format = "%s\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = no

    ### Icons ###

    icon_position = left
    max_icon_size = 32
	icon_path = /kthxbye

    ### History ###

    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/google-chrome-stable
    always_run_script = true
    title = Dunst
    class = Dunst

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background  = "#22262E"
    foreground  = "#CCCCCC"
    frame_color = "#CCCCCC"
    timeout = 5

[urgency_normal]
    background  = "#22262E"
    foreground  = "#CCCCCC"
    frame_color = "#CCCCCC"
    timeout = 5

[urgency_critical]
    background  = "#22262E"
    foreground  = "#b71616"
    frame_color = "#b71616"
    timeout = 5

